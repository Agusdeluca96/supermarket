{% extends 'base.html.twig' %} 
{% block body %}
    <body class="text-center">
        <form class="form-signin">
            <img class="mb-4" src="{{ asset('assets/images/uploads/image_login.png') }}" alt="Login" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Iniciar Sesión</h1>
            <label for="inputUsername" class="sr-only">Usuario</label>
            <input type="username" id="inputUsername" class="form-control" placeholder="Usuario" required="" autofocus="">
            <label for="inputPassword" class="sr-only">Contraseña</label>
            <input type="password" id="inputPassword" class="form-control" placeholder="Contraseña" required="">
            <br>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Ingresar</button>
            <p class="mt-5 mb-3 text-muted">© Grupo 16 - Sistemas Distribuidos</p>
        </form>
    </body>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock %}